<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Spotify API Test Suite" parallel="classes" thread-count="3"
	verbose="1">

	<listeners>
		<listener class-name="com.automation.listeners.ExtentReportListener" />
		<listener class-name="com.automation.listeners.TestListener" />
	</listeners>

	<test name="User API Tests" preserve-order="true">
		<classes>
			<class name="com.automation.tests.UserApiTest" />
		</classes>
	</test>

	<test name="Authentication Tests">
		<classes>
			<class name="com.automation.tests.AuthenticationTest" />
		</classes>
	</test>

	<test name="Product API Tests">
		<classes>
			<class name="com.automation.tests.ProductApiTest" />
		</classes>
	</test>

</suite>